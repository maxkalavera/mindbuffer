{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "source/",
    "paths": {
      "@renderer/*": ["renderer/*"],
      "@ts/*": ["types/*"],
      "@styles/*": ["styles/*"],
    },
  },
  "include": [
    "./source/renderer/**/*",
  ],
}