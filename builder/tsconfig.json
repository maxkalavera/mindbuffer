{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "module": "commonjs",
    "baseUrl": "src/",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["*"],
      "@main/*": ["main/*"],
      "@renderer/*": ["renderer/*"],
    },
  },
}
